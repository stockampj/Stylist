@{
    Layout = "_Layout";
}

@using Style.Models;

<h1> Stylists: </h1>

@if(@Model.Count == 0)
{
    <p>There are no Stylists yet!</p>
    @Html.ActionLink("Add Stylist", "Create", "Stylists", null, new {@class="nav-partial"})
}

@foreach (Stylist stylist in Model)
{
    @Html.ActionLink($"{stylist.Name}", "Show", new {id = stylist.StylistId})
}
