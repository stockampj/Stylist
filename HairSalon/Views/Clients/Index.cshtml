@{
    Layout = "_Layout";
}

@using HairSalon.Models
@model List<HairSalon.Models.Client>

<h1> Clients: </h1>

<div class="list-view row">

    @if(@Model.Count == 0)
    {
        <div class="list-view-col">
            <p>There are no clients yet!</p>
        </div>
        <div class="list-view-col">        
            @Html.ActionLink("Add Client", "Create", "Clients", null, new {@class="nav-partial"})
        </div>
    }


    @foreach (Client client in Model)
    {
        <div class="list-view-col">
            @Html.ActionLink($"{client.Name_First} {client.Name_Last}", "Show", new {id = client.ClientId})
        </div>
        <div class="list-view-col">
            <p>@client.Stylist.Name</p>
        </div>
    }
</div>