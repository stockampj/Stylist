@{
    Layout = "_Layout";
}

@using HairSalon.Models;

<h1> Stylists: </h1>

<div class="list-view row">

    @if(@Model.Count == 0)
    {
        <div class="list-view-col">
            <p>There are no Stylists yet!</p>
        </div>
        <div class="list-view-col">        
            @Html.ActionLink("Add Stylist", "Create", "Stylists", null, new {@class="nav-partial"})
        </div>
    }


    @foreach (Stylist stylist in Model)
    {
        <div class="list-view-col">
            @Html.ActionLink($"{stylist.Name}", "Show", new {id = stylist.StylistId})
        </div>
        <div class="list-view-col">
            @stylist.Specialty
        </div>
    }
</div>